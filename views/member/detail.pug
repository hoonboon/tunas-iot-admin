extends ../layout

block content
  .page-header
    h3
      if title2
        = title2
      else
        = title
    p Agent Id 代理编号: #{memberId}
  #member-detail.form-horizontal
    .form-group
      label.col-sm-3.col-xs-3.control-label Date Join 报单日期
      .col-sm-7.col-xs-9 
        .form-control-static #{member.dateJoinDisplay}
    .form-group
      label.col-sm-3.col-xs-3.control-label Name CH 中文姓名
      .col-sm-7.col-xs-9
        .form-control-static #{member.profile.nameCh}
    .form-group
      label.col-sm-3.col-xs-3.control-label Name EN 英文姓名
      .col-sm-7.col-xs-9
        .form-control-static #{member.profile.name}
    .form-group
      label.col-sm-3.col-xs-3.control-label Gender 性别
      .col-sm-7.col-xs-9
        select.form-control-static(disabled=true)
          for option in genderOptions
            option(
              label=option.label, 
              value=option.value, 
              selected=(option.isSelected ? 'selected' : false)
            ) #{option.label}
    .form-group
      label.col-sm-3.col-xs-3.control-label Date of Birth 生日日期
      .col-sm-7.col-xs-9
        .form-control-static #{member.profile.dobDisplay}
    .form-group
      label.col-sm-3.col-xs-3.control-label Mobile No. 手机号码
      .col-sm-7.col-xs-9
        .form-control-static #{member.contact.mobileNo}
    .form-group
      label.col-sm-3.col-xs-3.control-label NRIC 身份证号
      .col-sm-7.col-xs-9
        .form-control-static #{member.nric}
    .form-group
      label.col-sm-3.col-xs-3.control-label Bank Account No. 银行帐号
      .col-sm-7.col-xs-9
        .form-control-static #{member.bank.accNo}
    .form-group
      label.col-sm-3.col-xs-3.control-label Bank Name 开户行名称
      .col-sm-7.col-xs-9
        .form-control-static #{member.bank.bankName}
    .form-group
      label.col-sm-3.col-xs-3.control-label Bank Address 开户行地址
      .col-sm-7.col-xs-9
        .form-control-static #{member.bank.bankAddr}
    .form-group
      label.col-sm-3.col-xs-3.control-label Home Address 发货住址
      .col-sm-7.col-xs-9
        .form-control-static #{member.contact.homeAddr}
    .form-group
      label.col-sm-3.col-xs-3.control-label Wechat ID 国外微信号
      .col-sm-7.col-xs-9
        .form-control-static #{member.social.wechat}
    .form-group
      label.col-sm-3.col-xs-3.control-label Sponsor Name 推荐人
      .col-sm-7.col-xs-9
        .form-control-static #{member.sponsor.name}
    .form-group
      label.col-sm-3.col-xs-3.control-label Sponsor Contact No. 推荐人电话
      .col-sm-7.col-xs-9
        .form-control-static #{member.sponsor.contactNo}
    .form-group
      label.col-sm-3.col-xs-3.control-label Organization 大区经理
      .col-sm-7.col-xs-9
        .form-control-static #{member.sponsor.orgNo}
    .form-group
      label.col-sm-3.col-xs-3.control-label Team 团队长
      .col-sm-7.col-xs-9
        .form-control-static #{member.sponsor.teamNo}
    .form-group
      label.col-sm-3.col-xs-3.control-label Starter Kit 产品
      .col-sm-7.col-xs-9
        select.form-control-static(disabled=true)
          for option in kitProductOptions
            option(
              label=option.label, 
              value=option.value, 
              selected=(option.isSelected ? 'selected' : false)
            ) #{option.label}
    .form-group
      label.col-sm-3.col-xs-3.control-label Amount 金额
      .col-sm-7.col-xs-9
        select.form-control-static(disabled=true)
          for option in kitAmountOptions
            option(
              label=option.label, 
              value=option.value, 
              selected=(option.isSelected ? 'selected' : false)
            ) #{option.label}
    .form-group
      .col-sm-offset-3.col-sm-7.col-xs-9
        if user.hasAccess('member:edit')
          a.btn.btn-primary(href=member.url+'/update') Edit 编辑
          span
          | 
        a.btn.btn-danger(href='/members') Back 取消
